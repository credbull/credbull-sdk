{
  "name": "credbull-sdk",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "description": "Credbull SDK. DeFi protocol integration.",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky",
    "test": "yarn workspaces foreach --all --topological-dev run test",
    "lint": "yarn workspace @credbull-sdk/credbull lint",
    "format": "prettier . --write"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.5",
    "@eslint/js": "^9.18.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.0",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "eslint-plugin-react": "^7.37.4",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "prettier": "^3.4.2",
    "typescript-eslint": "^8.20.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "yarn workspace @credbull-sdk/credbull lint",
      "yarn workspace @credbull-sdk/credbull format --check"
    ],
    "*.css": [
      "yarn workspace @credbull-sdk/credbull format --check"
    ]
  }
}
